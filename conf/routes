# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Root PAGE
GET			/							 com.inland24.plantsim.controllers.PowerPlantController.home
GET			/config					     com.inland24.plantsim.controllers.PowerPlantController.appConfig

# Endpoints to fetch details about the PowerPlant
GET         /powerPlant/:id/telemetry    com.inland24.plantsim.controllers.PowerPlantController.powerPlantSignals(id: Int)
GET         /powerPlant/:id/details      com.inland24.plantsim.controllers.PowerPlantController.powerPlantDetails(id: Int)
GET         /powerPlants                 com.inland24.plantsim.controllers.PowerPlantController.powerPlants(active: Boolean ?= true, page: Int ?= 1)

# Endpoints to steer a PowerPlant
POST       /powerPlant/:id/dispatch      com.inland24.plantsim.controllers.PowerPlantController.dispatchPowerPlant(id: Int)
POST       /powerPlant/:id/release       com.inland24.plantsim.controllers.PowerPlantController.returnToNormalPowerPlant(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET			/assets/*file				 controllers.Assets.versioned(path="/public", file: Asset)